{% extends 'base.html.twig' %}

{% block title %}Theses{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1> titres des theses</h1>


{% for Ecole in Ecoles %} 
<div>
     <p> {{Ecole.nom | capitalize }} </p>
     <a href="{{Ecole.lien}}"> {{Ecole.lien}}<a/> 
     
    {% for These in Ecole.theses %}
     <h2> {{These.titre| capitalize }} </h2>
     <h3> {{These.accroche| capitalize }} </h3>
     <h4> {{These.description| capitalize }} </h4>
     <p> {{These.mail| capitalize }} </p>
    {% endfor %}
 </div>   
{% endfor %}
{% endblock %}
